{
  "info": {
    "name": "WhatsApp Scheduler API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection to manage schedules and control the scheduler."
  },
  "item": [
    {
      "name": "Scheduler Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/scheduler/status",
          "protocol": "http",
          "host": ["127","0","0","1"],
          "port": "8000",
          "path": ["scheduler","status"]
        }
      }
    },
    {
      "name": "Scheduler Start",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/scheduler/start",
          "protocol": "http",
          "host": ["127","0","0","1"],
          "port": "8000",
          "path": ["scheduler","start"]
        }
      }
    },
    {
      "name": "Scheduler Stop",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/scheduler/stop",
          "protocol": "http",
          "host": ["127","0","0","1"],
          "port": "8000",
          "path": ["scheduler","stop"]
        }
      }
    },
    {
      "name": "List Schedules",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/schedules",
          "protocol": "http",
          "host": ["127","0","0","1"],
          "port": "8000",
          "path": ["schedules"]
        }
      }
    },
    {
      "name": "Save Schedules",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/schedules/save",
          "protocol": "http",
          "host": ["127","0","0","1"],
          "port": "8000",
          "path": ["schedules","save"]
        }
      }
    },
    {
      "name": "Load Schedules from File",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {"mode": "raw", "raw": "{}"},
        "url": {
          "raw": "http://127.0.0.1:8000/schedules/load",
          "protocol": "http",
          "host": ["127","0","0","1"],
          "port": "8000",
          "path": ["schedules","load"]
        }
      }
    },
    {
      "name": "Replace Schedules (Body Entries)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"entries\": [\n    {\n      \"type\": \"message\",\n      \"group_name\": \"Cairo\",\n      \"message\": \"One-time\",\n      \"time\": \"2025-10-30 09:00\",\n      \"repeat\": \"once\"\n    },\n    {\n      \"type\": \"image\",\n      \"group_name\": \"Cairo\",\n      \"image_path\": \"/abs/path/image.jpg\",\n      \"caption\": \"hello\",\n      \"time\": \"2025-10-30 09:15\",\n      \"repeat\": \"once\"\n    },\n    {\n      \"type\": \"poll\",\n      \"group_name\": \"Cairo\",\n      \"question\": \"Lunch?\",\n      \"options\": [\"Pizza\", \"Burger\"],\n      \"allow_multiple\": false,\n      \"time\": \"2025-10-30 12:00\",\n      \"repeat\": \"once\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/schedules/load",
          "protocol": "http",
          "host": ["127","0","0","1"],
          "port": "8000",
          "path": ["schedules","load"]
        }
      }
    }
  ]
}
